<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="cl.bennu.plcbus.common.domain.ProgrammingDetail" table="detalle_programacion" lazy="false">
        <id name="id" column="pgdr_id">
            <generator class="native"/>
        </id>
        <many-to-one name="programming" column="prgm_id" not-null="true" fetch="join" update="false" lazy="false" cascade="none"/>
        <property name="on" column="prgm_encendido" />
        <property name="off" column="prgm_apagado" />
        <property name="dayEnum" column="dias_id" type="dayEnum"/>

        <property name="creatorUser" column="prgm_usuario_creador"/>
        <property name="create" column="prgm_fecha_creacion"/>
        <property name="updateUser" column="prgm_usuario_actualizador"/>
        <property name="update" column="prgm_fecha_actualizacion"/>
    </class>

</hibernate-mapping>