<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="cl.bennu.plcbus.common.domain.AlarmDevice" table="dispositivos_alarmados" lazy="false" >
        <id name="id" column="dpal_id">
            <generator class="native"/>
        </id>
        <property name="deviceId" column="dpst_id"/>
        <property name="date" column="dpal_fecha"/>
        <property name="email" column="dpal_mail"/>
    </class>

</hibernate-mapping>