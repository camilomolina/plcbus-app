<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="cl.bennu.plcbus.common.domain.Property" table="propiedad" lazy="false" >
        <id name="id" column="prpd_id">
            <generator class="native"/>
        </id>
        <property name="name" column="prpd_nombre"/>
        <property name="mail" column="prpd_mail"/>
        <property name="mail2" column="prpd_mail2"/>
        <property name="address" column="prpd_direccion"/>
        <property name="phone" column="prpd_celular"/>

        <property name="creatorUser" column="prpd_usuario_creador"/>
        <property name="create" column="prpd_fecha_creacion"/>
        <property name="updateUser" column="prpd_usuario_actualizador"/>
        <property name="update" column="prpd_fecha_actualizacion"/>
    </class>

</hibernate-mapping>